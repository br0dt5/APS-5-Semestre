<Window x:Class="Chat.MVVM.View.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.MVVM.View" xmlns:viewmodel="clr-namespace:Chat.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Connect" Height="120" Width="150">

    <Window.DataContext>
        <viewmodel:ConnectViewModel/>
    </Window.DataContext>

    <StackPanel Margin="10">
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0, 0, 0, 10"/>
        <Button Content="Conectar"
                Command="{Binding ConnectToServerCommand}"/>
    </StackPanel>
</Window>
